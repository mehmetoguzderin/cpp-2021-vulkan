{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "cpp-2021-vulkan",
  "version": "0.0.1",
  "dependencies": [
    "benchmark",
    "cgltf",
    "cli11",
    "entt",
    "glfw3",
    "glm",
    "glslang",
    {
      "name": "imgui",
      "features": [
        "glfw-binding",
        "vulkan-binding"
      ]
    },
    "nlohmann-json",
    "pugixml",
    {
      "name": "sdl2-image",
      "features": [
        "libjpeg-turbo",
        "tiff",
        "libwebp"
      ]
    },
    "spirv-headers",
    "taskflow",
    {
      "name": "tiff",
      "features": [
        "zstd"
      ]
    },
    "vulkan-headers",
    "vulkan-memory-allocator",
    "zstd"
  ]
}